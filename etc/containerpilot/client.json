{
  "consul": "http://consul:8500",
  "preStart": [
    "consul-template",
    "-once",
    "-consul",
    "consul:8500",
    "-template",
    "/code/etc/nginx/client.conf.ctmpl:/usr/local/nginx/conf/nginx.conf",
    "-template",
    "/code/src/client/public/index.html.ctmpl:/code/build/client/index.html"
  ],
  "services": [
    {
      "name": "client",
      "port": 80,
      "poll": 10,
      "ttl": 30
    }
  ],
  "backends": [
    {
      "name": "signal",
      "poll": 10,
      "onChange": [
        "consul-template",
        "-once",
        "-consul",
        "consul:8500",
        "-template",
        "/code/etc/nginx/client.conf.ctmpl:/usr/local/nginx/conf/nginx.conf:nginx -s reload"
      ]
    }
  ]
}
